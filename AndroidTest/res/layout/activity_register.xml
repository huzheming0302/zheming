<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_scrollview"
    android:fillViewport="true"
    android:overScrollMode="ifContentScrolls" >

<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background_login"
    android:gravity="center" >
    
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/background_login_div" >
        
        <TextView
            android:id="@+id/phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true" 			android:layout_marginTop="15dp"
			android:layout_alignRight="@id/textview03"  
	  		android:text="@string/phone_number" />
        
        <TextView
            android:id="@+id/textview02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/phone_number"
            android:layout_alignRight="@id/textview03"  
            android:layout_marginTop="15dp"
            android:text="@string/password" />
        
        <TextView
            android:id="@+id/textview03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textview02"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="5dp"
            android:singleLine="true"
            android:text="@string/password_again" />
        
        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/password_again"
            android:layout_below="@id/textview03"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="100dp"
            android:background="@drawable/boder_nopadding"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="@color/blue"
            android:textSize="20sp" 
            android:text="@string/registeranaccount" />

        <EditText
            android:id="@+id/phonenumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/phone_number"
            android:layout_alignBottom="@+id/phone_number"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="30dp"
            android:layout_toRightOf="@+id/phone_number"
            android:background="@drawable/boder"
            android:digits="1234567890"
            android:ems="10"
            android:singleLine="true" 
            android:textSize="15sp"
            android:hint="@string/write_phonenumber"/>

        <EditText
            android:id="@+id/password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textview03"
            android:layout_alignLeft="@+id/phonenumber"
            android:layout_alignRight="@+id/phonenumber"
            android:background="@drawable/boder"
            android:digits="1234567890"
            android:ems="10"
            android:hint="@string/write_password"
            android:singleLine="true"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/password_again"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/button1"
            android:layout_alignLeft="@+id/password"
            android:layout_alignRight="@+id/password"
            android:background="@drawable/boder"
            android:digits="1234567890"
            android:ems="10"
            android:hint="@string/write_password_again"
            android:singleLine="true"
            android:textSize="15sp" />

    </RelativeLayout> 
    
    
    
    
    
  	
</RelativeLayout>
</ScrollView>
