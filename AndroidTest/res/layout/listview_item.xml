<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100sp"
    android:id="@+id/RelativeLayout_listview01" 
    android:background="@drawable/background_listview_item">
    
	 <RelativeLayout
            android:id="@+id/RelativeLayout_listview02"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >
        	
            <TextView
                android:id="@+id/listview_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="30dp"
                android:text="@string/id"
                android:textSize="20dp" />
            
            <TextView
                android:id="@+id/listview_event"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/listview_id"
                android:layout_marginRight="30dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="30dp"
                android:text="@string/consume"
                android:textSize="20dp" />
			
            
            <TextView
                android:id="@+id/listview_money_yuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/event"
                android:layout_alignBottom="@+id/event"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30dp"
                android:background="@null"
                android:gravity="right"
                android:hint="@string/yuan"
                android:textColor="@color/black"
                android:textCursorDrawable="@null"
                android:textSize="20sp" />
                
            <TextView
                android:id="@+id/listview_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/event"
                android:layout_alignBottom="@+id/event"
                android:layout_toLeftOf="@+id/listview_money_yuan"
                android:layout_toRightOf="@id/listview_event"
                android:background="@null"
                android:gravity="right"
                android:hint="@string/set_money"
                android:textColor="@color/blue"
                android:textCursorDrawable="@null"
                android:textSize="20sp" >

                <requestFocus />
            </TextView>
        </RelativeLayout>
        
	 
		
	 <RelativeLayout
	     android:id="@+id/RelativeLayout_listview04"
	     android:layout_width="match_parent"
	     android:layout_height="80sp"
	     android:layout_below="@id/RelativeLayout_listview02"
	     android:layout_alignParentRight="true"
	     android:gravity="top" >
            
	     <TextView
                android:id="@+id/listview_mydate"
                android:layout_width="wrap_content"
                android:layout_height="25sp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="15dp"
                android:background="@drawable/boder_nopadding"
                android:gravity="center"
                android:singleLine="true"
                android:text="2016-12-24"
                android:paddingLeft="15px"
                android:paddingRight="15px"
                android:textColor="@color/black"
                android:textSize="10sp" />
            
           
            
            <Button
                android:id="@+id/listview_delete"
                android:layout_height="25sp"
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:background="@drawable/boder_nopadding"
                android:gravity="center"
                android:paddingLeft="15px"
                android:paddingRight="15px"
                android:singleLine="true"
                android:text="@string/delete"
                android:textColor="@color/black"
                android:textSize="10sp" />

            <Button
                android:id="@+id/listview_amendment"
                android:layout_width="wrap_content"
                android:layout_height="25sp"
                android:layout_alignParentTop="true"
                android:layout_marginRight="15px"
                android:layout_toLeftOf="@+id/listview_delete"
                android:background="@drawable/boder_nopadding"
                android:gravity="center"
                android:paddingLeft="15px"
                android:paddingRight="15px"
                android:singleLine="true"
                android:text="@string/amendment"
                android:textColor="@color/black"
                android:textSize="12sp" />
            
             <TextView
                 android:id="@+id/listview_remark"
                 android:layout_width="match_parent"
                 android:layout_height="30sp"
                 android:layout_alignLeft="@+id/listview_mydate"
                 android:layout_alignRight="@+id/listview_delete"
                 android:layout_below="@id/listview_mydate"
                 android:background="@null"
                 android:gravity="center_vertical|left"
                 android:hint="@string/set_remark"
                 android:paddingBottom="2px"
                 android:paddingLeft="15px"
                 android:paddingRight="15px"
                 android:paddingTop="2px"
                 android:singleLine="true"
                 android:textColor="@color/blue"
                 android:textSize="12sp" />

		</RelativeLayout>
    
</RelativeLayout>
