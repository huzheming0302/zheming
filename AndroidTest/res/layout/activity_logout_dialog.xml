<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_logout"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/exit_layout"
            android:layout_width="220dp"
            android:layout_height="120dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="200dp"
            android:background="@drawable/background_logout_div"
            android:gravity="center_horizontal"
            android:orientation="vertical" >
    	
			<TextView
            	android:id="@+id/textview01"
            	android:layout_alignParentTop="true" 
		    	android:layout_centerHorizontal="true" 
		    	android:layout_marginTop="20dp"
            	android:layout_marginLeft="40dp"
            	android:layout_marginRight="40dp"
            	android:layout_width="wrap_content"
            	android:layout_gravity="center"
            	android:layout_height="50dp"
            	android:background="@null"
            	android:textSize="20sp"
            	android:gravity="center"
            	android:textColor="@color/black"
            	android:text="@string/sure_logout" />
			<Button
                android:id="@+id/exitBtn0"
                android:layout_below="@id/textview01"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="是"
                android:background="@drawable/boder_nopadding"
                android:textSize="15sp" 
                android:textColor="@color/blue"/>
            
            <Button
              android:id="@+id/exitBtn1"
               android:layout_below="@id/textview01"
               android:layout_marginLeft="120dp"
               android:layout_marginTop="10dp"
               android:layout_width="50dp"
               android:layout_height="30dp"
               android:gravity="center"
               android:text="否"
               android:background="@drawable/boder_nopadding"
               android:textSize="15sp" 
               android:textColor="@color/blue"/>
			  
        
        </RelativeLayout>
</LinearLayout>